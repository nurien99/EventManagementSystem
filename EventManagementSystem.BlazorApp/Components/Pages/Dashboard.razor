                                            <div class="qa-icon manage">
                                                <i class="bi bi-calendar-event"></i>
                                            </div>
                                            <div class="qa-content">
                                                <h6>My Events</h6>
                                                <small>Manage your existing events</small>
                                            </div>
                                        </a>
                                    </div>
