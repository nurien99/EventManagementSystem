                                        </a>
                                    </div>
                                </div>
                            </div>
                        }

                        @if (showUpgradeMessage && !string.IsNullOrEmpty(upgradeMessage))
                        {
                            <div class="alert alert-info mt-3" role="alert">
                                <i class="bi bi-info-circle me-2"></i>@upgradeMessage
                            </div>
                        }
                    </div>
                </div>

                <!-- Top Events -->
