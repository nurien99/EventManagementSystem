                        <div class="stat-card">
                            <div class="stat-icon registrations">
                                <i class="bi bi-ticket-perforated"></i>
                            </div>
                            <div class="stat-content">
                                <h3>@(attendeeStats?.TotalRegistrations ?? 0)</h3>
