@model EventManagementSystem.Core.DTOs.Email.TicketDeliveryModel

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>Your Ticket for @Model.EventTitle - @Model.SiteName</title>
    <style>
        body { font-family: Arial, sans-serif; line-height: 1.6; color: #333; margin: 0; padding: 0; background-color: #f4f4f4; }
        .container { max-width: 600px; margin: 0 auto; background-color: white; }
        .header { background: linear-gradient(135deg, #0295A9 0%, #12ADC1 100%); color: white; padding: 30px; text-align: center; }
        .content { padding: 30px; }
        .ticket-card { background: #f8f9fa; border: 2px solid #0295A9; border-radius: 10px; padding: 20px; margin: 20px 0; }
        .qr-code { text-align: center; margin: 20px 0; }
        .qr-code img { max-width: 200px; height: 200px; }
        .event-details { background-color: #e8f8fa; padding: 20px; border-left: 4px solid #0295A9; border-radius: 5px; margin: 20px 0; }
        .venue-info { background-color: #fff3cd; border: 1px solid #ffeaa7; color: #856404; padding: 15px; border-radius: 5px; margin: 15px 0; }
        .important-info { background-color: #d4edda; border: 1px solid #c3e6cb; color: #155724; padding: 15px; border-radius: 5px; margin: 15px 0; }
        .footer { background-color: #2c3e50; color: white; padding: 20px; text-align: center; font-size: 12px; }
        .logo { font-size: 24px; font-weight: bold; margin-bottom: 10px; }
        .ticket-info { display: grid; grid-template-columns: 1fr 1fr; gap: 15px; margin: 15px 0; }
        .info-item { padding: 10px; background: white; border-radius: 5px; }
        .info-label { font-weight: bold; color: #0295A9; font-size: 12px; text-transform: uppercase; }
        .info-value { font-size: 14px; margin-top: 5px; }
        .price-badge { background: #0295A9; color: white; padding: 5px 10px; border-radius: 15px; font-weight: bold; display: inline-block; }
        .cta-button { display: inline-block; background: linear-gradient(135deg, #0295A9 0%, #12ADC1 100%); color: white; padding: 15px 30px; text-decoration: none; border-radius: 25px; margin: 20px 0; font-weight: bold; box-shadow: 0 4px 15px rgba(2, 149, 169, 0.3); }
        .cta-button:hover { text-decoration: none; color: white; }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <div class="logo">üé´ @Model.SiteName</div>
            <h1>Your Event Ticket</h1>
            <p>Hi @Model.AttendeeName, your ticket is ready!</p>
        </div>

        <div class="content">
            <h2>üéâ @Model.EventTitle</h2>
            
            <!-- Ticket Card -->
            <div class="ticket-card">
                <div style="text-align: center; margin-bottom: 15px;">
                    <h3 style="margin: 0; color: #0295A9;">üéüÔ∏è ADMIT ONE</h3>
                    <p style="margin: 5px 0; font-size: 18px; font-weight: bold;">Ticket #@Model.TicketNumber</p>
                </div>

                <div class="ticket-info">
                    <div class="info-item">
                        <div class="info-label">Attendee</div>
                        <div class="info-value">@Model.AttendeeName</div>
                    </div>
                    <div class="info-item">
                        <div class="info-label">Ticket Type</div>
                        <div class="info-value">@Model.TicketTypeName</div>
                    </div>
                    <div class="info-item">
                        <div class="info-label">Event Date</div>
                        <div class="info-value">@Model.EventStartDate.ToString("dddd, MMMM dd, yyyy")</div>
                    </div>
                    <div class="info-item">
                        <div class="info-label">Event Time</div>
                        <div class="info-value">@Model.EventStartDate.ToString("h:mm tt")</div>
                    </div>
                </div>

                @if (Model.TicketPrice > 0)
                {
                    <div style="text-align: center; margin-top: 15px;">
                        <span class="price-badge">$@Model.TicketPrice.ToString("F2")</span>
                    </div>
                }
            </div>

            <!-- QR Code -->
            @if (!string.IsNullOrEmpty(Model.QRCodeBase64))
            {
                <div class="qr-code">
                    <h3>üì± Your QR Code</h3>
                    <img src="data:image/png;base64,@Model.QRCodeBase64" alt="Ticket QR Code" />
                    <p style="font-size: 12px; color: #666; margin-top: 10px;">
                        Show this QR code at the event entrance for quick check-in
                    </p>
                </div>
            }

            <!-- Event Details -->
            <div class="event-details">
                <h3>üìç Event Information</h3>
                
                @if (!string.IsNullOrEmpty(Model.EventDescription))
                {
                    <p><strong>About:</strong> @Model.EventDescription</p>
                }
                
                <p><strong>üìÖ Date & Time:</strong><br>
                   @Model.EventStartDate.ToString("dddd, MMMM dd, yyyy 'at' h:mm tt")
                   @if (Model.EventEndDate.HasValue)
                   {
                       <span> - @Model.EventEndDate.Value.ToString("h:mm tt")</span>
                   }
                </p>

                <p><strong>üè¢ Venue:</strong><br>
                   @Model.VenueName<br>
                   @if (!string.IsNullOrEmpty(Model.VenueAddress))
                   {
                       <span>@Model.VenueAddress</span>
                   }
                </p>
            </div>

            <!-- Important Check-in Information -->
            <div class="important-info">
                <h3>‚úÖ Check-in Instructions</h3>
                @if (!string.IsNullOrEmpty(Model.CheckInInstructions))
                {
                    <p>@Model.CheckInInstructions</p>
                }
                else
                {
                    <ul style="margin: 10px 0; padding-left: 20px;">
                        <li><strong>Arrive Early:</strong> Please arrive 15-30 minutes before the event start time</li>
                        <li><strong>Bring This Email:</strong> Show this email or the QR code on your mobile device</li>
                        <li><strong>Valid ID:</strong> Please bring a valid photo ID for verification</li>
                        <li><strong>Mobile-Friendly:</strong> Save this email to your phone for easy access</li>
                    </ul>
                }
            </div>

            <!-- Venue Directions -->
            <div class="venue-info">
                <h3>üó∫Ô∏è Getting There</h3>
                <p><strong>Venue:</strong> @Model.VenueName</p>
                @if (!string.IsNullOrEmpty(Model.VenueAddress))
                {
                    <p><strong>Address:</strong> @Model.VenueAddress</p>
                    <p>üìç <a href="https://maps.google.com/?q=@Uri.EscapeDataString(Model.VenueAddress)" style="color: #856404;">Get Directions on Google Maps</a></p>
                }
                <p><strong>üí° Tip:</strong> Check traffic conditions before leaving and consider parking availability at the venue.</p>
            </div>

            <!-- Call to Action -->
            @if (!string.IsNullOrEmpty(Model.EventUrl))
            {
                <div style="text-align: center; margin: 30px 0;">
                    <a href="@Model.EventUrl" class="cta-button">
                        üìÖ View Event Details
                    </a>
                </div>
            }

            <!-- Help Section -->
            <div style="background-color: #e8f4f8; padding: 15px; border-radius: 10px; margin: 20px 0;">
                <h3>ü§î Need Help?</h3>
                <p><strong>Questions about your ticket?</strong></p>
                <ul style="margin: 10px 0; padding-left: 20px;">
                    <li>Double-check event date, time, and venue information</li>
                    <li>Save this email for easy access at the event</li>
                    <li>Contact event organizer if you need to transfer or cancel</li>
                    <li>Arrive early for smooth check-in experience</li>
                </ul>
                <p>If you experience any issues with your ticket, please contact our support team.</p>
            </div>

            <!-- Footer Message -->
            <div style="text-align: center; margin: 30px 0; padding: 20px; background-color: #f8f9fa; border-radius: 10px;">
                <h3 style="color: #0295A9;">üéä We're Excited to See You!</h3>
                <p>Thank you for your registration. We look forward to providing you with an amazing event experience!</p>
                <p style="font-size: 14px; color: #666;">
                    <strong>Event:</strong> @Model.EventTitle<br>
                    <strong>Date:</strong> @Model.EventStartDate.ToString("MMMM dd, yyyy")<br>
                    <strong>Ticket:</strong> @Model.TicketNumber
                </p>
            </div>
        </div>

        <div class="footer">
            <p>&copy; @DateTime.Now.Year @Model.SiteName. All rights reserved.</p>
            <p>This ticket was sent to @Model.Email</p>
            <p>Sent on @Model.SentAt.ToString("dddd, MMMM dd, yyyy 'at' h:mm tt")</p>
            <p style="font-size: 11px; color: #bdc3c7; margin-top: 10px;">
                This is your official event ticket. Please keep this email for your records and present it at the event entrance.
            </p>
        </div>
    </div>
</body>
</html>