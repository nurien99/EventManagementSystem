@model EventManagementSystem.Core.DTOs.Email.EventReminderModel

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>Event Reminder - @Model.EventTitle</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            line-height: 1.6;
            color: #333;
            margin: 0;
            padding: 0;
            background-color: #f4f4f4;
        }

        .container {
            max-width: 600px;
            margin: 0 auto;
            background-color: white;
        }

        .header {
            background: linear-gradient(135deg, #f39c12 0%, #e67e22 100%);
            color: white;
            padding: 30px;
            text-align: center;
        }

        .content {
            padding: 30px;
        }

        .reminder-box {
            background: #fff3cd;
            border: 2px solid #ffc107;
            padding: 20px;
            border-radius: 10px;
            margin: 20px 0;
            text-align: center;
        }

        .footer {
            background-color: #2c3e50;
            color: white;
            padding: 20px;
            text-align: center;
            font-size: 12px;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <h1>⏰ Event Reminder</h1>
            <p>Don't forget about your upcoming event!</p>
        </div>

        <div class="content">
            <h2>Hello @Model.UserName,</h2>

            <div class="reminder-box">
                <h3>🎉 Your event is starting in @Model.HoursUntilEvent!</h3>
                <h2 style="color: #e67e22; margin: 15px 0;">@Model.EventTitle</h2>
                <p><strong>📅 Date:</strong> @Model.EventStartDate.ToString("dddd, MMMM dd, yyyy 'at' h:mm tt")</p>
                <p><strong>📍 Venue:</strong> @Model.VenueName</p>
                <p><strong>🗺️ Address:</strong> @Model.VenueAddress</p>
            </div>

            @if (!string.IsNullOrEmpty(Model.SpecialInstructions))
            {
                <div style="background-color: #e8f4f8; padding: 15px; border-radius: 10px; margin: 20px 0;">
                    <h4>📋 Special Instructions:</h4>
                    <p>@Model.SpecialInstructions</p>
                </div>
            }

            <div style="background-color: #d4edda; padding: 15px; border-radius: 10px; margin: 20px 0;">
                <h4>✅ Reminder Checklist:</h4>
                <ul>
                    <li>📱 Have your ticket QR code ready</li>
                    <li>🚗 Plan your route and parking</li>
                    <li>🆔 Bring valid identification</li>
                    <li>⏰ Arrive 15 minutes early</li>
                    <li>💧 Stay hydrated and dress appropriately</li>
                </ul>
            </div>

            <div style="text-align: center; margin: 30px 0;">
                <a href="@Model.EventUrl" style="display: inline-block; background: linear-gradient(135deg, #f39c12 0%, #e67e22 100%); color: white; padding: 15px 30px; text-decoration: none; border-radius: 25px; font-weight: bold;">
                    📖 View Event Details
                </a>
            </div>

            <p>We can't wait to see you there! Have a fantastic time at the event.</p>
        </div>

        <div class="footer">
            <p>&copy; @DateTime.Now.Year @Model.SiteName. All rights reserved.</p>
            <p>This reminder was sent to @Model.Email</p>
        </div>
    </div>
</body>
</html>